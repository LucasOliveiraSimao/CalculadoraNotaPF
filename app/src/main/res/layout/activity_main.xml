<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtNota"
        style="@style/textResult"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="ME"
        android:maxLength="4"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:textColorHint="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_700" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sete"
            style="@style/buttonsNumbers"
            android:text="7" />

        <TextView
            android:id="@+id/oito"
            style="@style/buttonsNumbers"
            android:text="8" />

        <TextView
            android:id="@+id/nove"
            style="@style/buttonsNumbers"
            android:text="9" />

        <TextView
            style="@style/buttonsNumbers"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quatro"
            style="@style/buttonsNumbers"
            android:text="4" />

        <TextView
            android:id="@+id/cinco"
            style="@style/buttonsNumbers"
            android:text="5" />

        <TextView
            android:id="@+id/seis"
            style="@style/buttonsNumbers"
            android:text="6" />

        <TextView
            style="@style/buttonsNumbers"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/um"
            style="@style/buttonsNumbers"
            android:text="1" />

        <TextView
            android:id="@+id/dois"
            style="@style/buttonsNumbers"
            android:text="2" />

        <TextView
            android:id="@+id/tres"
            style="@style/buttonsNumbers"
            android:text="3" />

        <TextView
            android:id="@+id/apagarTudo"
            style="@style/buttonsNumbers"
            android:text="C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ponto"
            style="@style/buttonsNumbers"
            android:text="." />

        <TextView
            android:id="@+id/zero"
            style="@style/buttonsNumbers"
            android:text="0" />

        <ImageView
            android:id="@+id/apagar"
            style="@style/buttonsNumbers"
            android:scaleType="center"
            android:src="@drawable/backspace" />

        <TextView
            android:id="@+id/igual"
            style="@style/buttonsNumbers"
            android:text="=" />

    </LinearLayout>

</LinearLayout>